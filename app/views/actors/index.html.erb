<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table>
  <thead>
    <tr>
      <th>Ident</th>
      <th>Ident type</th>
      <th>Actor type</th>
      <th>Surname</th>
      <th>Secsurname</th>
      <th>Firstname</th>
      <th>Secondname</th>
      <th>Birthdate</th>
      <th>Degree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.ident %></td>
        <td><%= actor.ident_type %></td>
        <td><%= actor.actor_type %></td>
        <td><%= actor.surname %></td>
        <td><%= actor.secsurname %></td>
        <td><%= actor.firstname %></td>
        <td><%= actor.secondname %></td>
        <td><%= actor.birthdate %></td>
        <td><%= actor.degree %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

