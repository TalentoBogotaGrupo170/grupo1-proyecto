<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Degree</th>
      <th>Validity</th>
      <th>Actor type</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Name</th>
      <th>Weight</th>
      <th>Fulfillment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.degree %></td>
        <td><%= goal.validity %></td>
        <td><%= goal.actor_type %></td>
        <td><%= goal.startdate %></td>
        <td><%= goal.enddate %></td>
        <td><%= goal.name %></td>
        <td><%= goal.weight %></td>
        <td><%= goal.fulfillment %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

