<p id="notice"><%= notice %></p>

<h1>Actor Relationships</h1>

<table>
  <thead>
    <tr>
      <th>Actor</th>
      <th>Actor2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actor_relationships.each do |actor_relationship| %>
      <tr>
        <td><%= actor_relationship.actor %></td>
        <td><%= actor_relationship.actor2 %></td>
        <td><%= link_to 'Show', actor_relationship %></td>
        <td><%= link_to 'Edit', edit_actor_relationship_path(actor_relationship) %></td>
        <td><%= link_to 'Destroy', actor_relationship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

